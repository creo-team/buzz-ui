{
	"name": "@creo-team/buzz-ui-monorepo",
	"private": true,
	"version": "0.2.0",
	"license": "MIT",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "npm run -w @creo-team/buzz-ui build && npm run -w @creo-team/buzz-ui-site build",
		"dev": "npm run -w @creo-team/buzz-ui-site dev",
		"lint": "npm run -w @creo-team/buzz-ui-site lint",
		"test": "npm run -w @creo-team/buzz-ui test",
		"typecheck": "npm run -w @creo-team/buzz-ui typecheck && npm run -w @creo-team/buzz-ui-site typecheck",
		"upgrade:all": "npx npm-check-updates -u && npm i"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/creo-team/buzz-ui.git"
	},
	"bugs": {
		"url": "https://github.com/creo-team/buzz-ui/issues"
	},
	"homepage": "https://github.com/creo-team/buzz-ui#readme",
	"dependencies": {
		"react": "18.3.1",
		"react-dom": "18.3.1"
	},
	"overrides": {
		"@types/react": "18.3.12",
		"@types/react-dom": "18.3.1",
		"react": "18.3.1",
		"react-dom": "18.3.1"
	}
}
