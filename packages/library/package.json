{
    "name": "@creo-team/buzz-ui",
    "version": "0.1.1",
    "private": false,
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        },
        "./server": {
            "types": "./dist/server.d.ts",
            "import": "./dist/server.js",
            "require": "./dist/server.cjs",
            "default": "./dist/server.js"
        },
        "./client": {
            "types": "./dist/client.d.ts",
            "import": "./dist/client.js",
            "require": "./dist/client.cjs",
            "default": "./dist/client.js"
        }
    },
    "dependencies": {
        "framer-motion": "^12.23.12",
        "lucide-react": "^0.540.0",
        "react-hot-toast": "^2.6.0",
        "react-hotkeys-hook": "^5.1.0"
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    	"devDependencies": {
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.0",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitest/ui": "^3.2.4",
		"jsdom": "^26.1.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
    "scripts": {
        "build": "tsup src/index.ts src/server.ts src/client.ts --format esm,cjs && npm run add-use-client",
        "add-use-client": "echo '\"use client\";' | cat - dist/client.js > temp && mv temp dist/client.js && echo '\"use client\";' | cat - dist/client.cjs > temp && mv temp dist/client.cjs",
        "dev": "tsup src/index.ts src/server.ts src/client.ts --watch --format esm,cjs --dts",
        		"test": "vitest run",
        "typecheck": "tsc -p tsconfig.json --noEmit --skipLibCheck",
        "prepublishOnly": "npm run test && npm run build",
        "upgrade:all": "npx npm-check-updates -u && npm i"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    }
}
