{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"skipLibCheck": true,
		"target": "ES2020",
		"module": "ESNext",
		"jsx": "react-jsx",
		"sourceMap": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noEmit": false,
		"outDir": "dist",
		"types": ["node", "react", "jest", "./src/types/next-navigation"]
	},
	"include": ["src/**/*"]
}

